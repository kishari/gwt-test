<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:own="urn:import:hu.dbx.gwt.test.client.component">
	<ui:style>
		.parentPanel {
			position: absolute;
			width: 100%;
			height: 100%;
		}
		.mainPanel {
			position: absolute;
			background-color: khaki;
			width: 100%;
			height:  100%;
		}
		.childPanel {
			position: absolute;			
			width: 100%;
			height:  100%;
		}
		.button {
			font-size: 10pt;
			width: 60px;
			height: 28px;
		}
		.label {
			width: 80px;
			font-size: 10pt;
		}
		
		.mainHeader {
			background-color: orange;
			width: 100%;
			text-valign: middle;
		}
		.mainFooter {
			background-color: orange;
			width: 100%;
		}
	</ui:style>
	
	<g:DeckPanel ui:field='parentPanel' styleName="{style.parentPanel}">
    	<g:DockLayoutPanel unit="PX" ui:field='mainPanel' styleName="{style.mainPanel}">
    		<g:north size="30">
    			<g:FlowPanel styleName="{style.mainHeader}">
    				<g:Button ui:field='newButton' styleName="{style.button}">New</g:Button>
    			</g:FlowPanel>
    		</g:north>
    		<g:center>
    			<g:VerticalPanel styleName="{style.childPanel}">
    				<g:FlexTable ui:field="productTable"></g:FlexTable>
    			</g:VerticalPanel>
    		</g:center>
    		<g:south size="30">
    			<g:HorizontalPanel spacing="1" styleName="{style.mainFooter}">
    			</g:HorizontalPanel>
    		</g:south>
		</g:DockLayoutPanel>
		
    	<g:DockLayoutPanel unit="PX" ui:field='secondPanel' styleName="{style.mainPanel}">
    		<g:north size="30" >
    			<g:FlowPanel styleName="{style.mainHeader}">
    				<g:Button ui:field='saveButton' styleName="{style.button}">Save</g:Button>
    				<g:Button ui:field='cancelButton' styleName="{style.button}">Cancel</g:Button>
    			</g:FlowPanel>
    		</g:north>    		
    		<g:center>
    			<g:VerticalPanel>
    				<g:HorizontalPanel spacing="1" >
    				</g:HorizontalPanel>
    				<g:HorizontalPanel ui:field="hor" spacing="2">
    					<g:Label styleName="{style.label}">name: </g:Label>
    					<g:TextBox></g:TextBox>
    				</g:HorizontalPanel>
    				<g:HorizontalPanel spacing="2">
    					<g:Label styleName="{style.label}">description: </g:Label>
    					<g:TextBox></g:TextBox>
    				</g:HorizontalPanel>
    			</g:VerticalPanel>
    		</g:center>
    		<g:south size="30">
    			<g:FlowPanel styleName="{style.mainFooter}" >
    				<g:Button ui:field='addNewVersionButton' styleName="{style.button}">+</g:Button>
    				<g:Button ui:field='removeVersionButton' styleName="{style.button}">-</g:Button>
    			    <g:Button ui:field='testButton' styleName="{style.button}">Test</g:Button>
    				<g:Button ui:field='editButton' styleName="{style.button}">Edit</g:Button>
    			</g:FlowPanel>
    		</g:south>
		</g:DockLayoutPanel>
		<g:DockLayoutPanel unit="EM" ui:field='thirdPanel' styleName="{style.mainPanel}">
			<g:north size="15">
				<g:VerticalPanel>
    				<g:HorizontalPanel spacing="1" >
    					<g:Button ui:field='saveButton2' styleName="{style.button}">Save</g:Button>
    					<g:Button ui:field='cancelButton2' styleName="{style.button}">Cancel</g:Button>
    				</g:HorizontalPanel>
    				<g:HorizontalPanel spacing="2">
    					<g:Label styleName="{style.label}">name: </g:Label>
    					<g:TextBox></g:TextBox>
    				</g:HorizontalPanel>
    				<g:HorizontalPanel spacing="2">
    					<g:Label styleName="{style.label}">description: </g:Label>
    					<g:TextBox></g:TextBox>
    				</g:HorizontalPanel>
    				<g:HorizontalPanel spacing="2">
    					<g:Label styleName="{style.label}">XSL: </g:Label>
    					<g:FileUpload></g:FileUpload>
    				</g:HorizontalPanel>
    				<g:HorizontalPanel spacing="2">
    					<g:Label styleName="{style.label}">XSD: </g:Label>
    					<g:FileUpload></g:FileUpload>
    				</g:HorizontalPanel>
    			</g:VerticalPanel>
    		</g:north>
		</g:DockLayoutPanel>
  </g:DeckPanel>

</ui:UiBinder> 