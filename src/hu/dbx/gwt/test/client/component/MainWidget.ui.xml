<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.parentPanel {
			position: absolute;
			width: 100%;
			height: 90%;
		}
		.childPanel {
			position: absolute;
			width: 100%;
			height:  100%;
		}
		.button {
			display: block;
			font-size: 10pt;
			width: 60px;
		}
		.label {
			width: 80px;
			font-size: 10pt;
		}
	</ui:style>
	
	<g:DeckPanel ui:field='parentPanel' styleName="{style.parentPanel}">
    	<g:DockLayoutPanel unit="EM" ui:field='firstPanel' styleName="{style.childPanel}">
    		<g:north size="3">
    			<g:HorizontalPanel spacing="1" >
    				<g:Button ui:field='newButton' styleName="{style.button}" >New</g:Button>
    			</g:HorizontalPanel>
    		</g:north>
    		<g:center size="20">
    			<g:Tree ui:field='productList' animationEnabled="true"></g:Tree>
    		</g:center>
		</g:DockLayoutPanel>
		
    	<g:DockLayoutPanel unit="EM" ui:field='secondPanel' styleName="{style.childPanel}">
    		<g:north size="8">
    			<g:VerticalPanel>
    				<g:HorizontalPanel spacing="1" >
    					<g:Button ui:field='saveButton' styleName="{style.button}">Save</g:Button>
    					<g:Button ui:field='cancelButton' styleName="{style.button}">Cancel</g:Button>
    				</g:HorizontalPanel>
    				<g:HorizontalPanel spacing="2">
    					<g:Label styleName="{style.label}">name: </g:Label>
    					<g:TextBox></g:TextBox>
    				</g:HorizontalPanel>
    				<g:HorizontalPanel spacing="2">
    					<g:Label styleName="{style.label}">description: </g:Label>
    					<g:TextBox></g:TextBox>
    				</g:HorizontalPanel>
    			</g:VerticalPanel>
    		</g:north>
    		<g:south size="3">
    			<g:HorizontalPanel spacing="1" >
    				<g:Button ui:field='addNewVersionButton' styleName="{style.button}">+</g:Button>
    				<g:Button ui:field='removeVersionButton' styleName="{style.button}">-</g:Button>
    			    <g:Button ui:field='testButton' styleName="{style.button}">Test</g:Button>
    				<g:Button ui:field='editButton' styleName="{style.button}">Edit</g:Button>
    			</g:HorizontalPanel>
    		</g:south>
		</g:DockLayoutPanel>
		<g:DockLayoutPanel unit="EM" ui:field='thirdPanel' styleName="{style.childPanel}">
			<g:north size="15">
				<g:VerticalPanel>
    				<g:HorizontalPanel spacing="1" >
    					<g:Button ui:field='saveButton2' styleName="{style.button}">Save</g:Button>
    					<g:Button ui:field='cancelButton2' styleName="{style.button}">Cancel</g:Button>
    				</g:HorizontalPanel>
    				<g:HorizontalPanel spacing="2">
    					<g:Label styleName="{style.label}">name: </g:Label>
    					<g:TextBox></g:TextBox>
    				</g:HorizontalPanel>
    				<g:HorizontalPanel spacing="2">
    					<g:Label styleName="{style.label}">description: </g:Label>
    					<g:TextBox></g:TextBox>
    				</g:HorizontalPanel>
    				<g:HorizontalPanel spacing="2">
    					<g:Label styleName="{style.label}">XSL: </g:Label>
    					<g:FileUpload></g:FileUpload>
    				</g:HorizontalPanel>
    				<g:HorizontalPanel spacing="2">
    					<g:Label styleName="{style.label}">XSD: </g:Label>
    					<g:FileUpload></g:FileUpload>
    				</g:HorizontalPanel>
    			</g:VerticalPanel>
    		</g:north>
		</g:DockLayoutPanel>
  </g:DeckPanel>

</ui:UiBinder> 