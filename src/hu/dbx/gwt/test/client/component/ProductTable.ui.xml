<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:n="urn:import:hu.dbx.gwt.test.client.component">
	<ui:style>
		.childPanel {
			position: absolute;			
			width: 100%;
			height:  100%;
		}
	</ui:style>
	
	<ui:style field='selectionStyle'
    		type='hu.dbx.gwt.test.client.component.ProductTable.SelectionStyle'>

  	.selectedRow {
    	background: #adcce7;
  	}

  	.selectedRow td {
    	font-size:15pt;
		height: 30px;
		background-color: lightgrey;
		border: 1px solid #eee;
  	}
  </ui:style>
	
	<g:VerticalPanel styleName="{style.childPanel}">
    	<g:FlexTable ui:field="productTable"></g:FlexTable>
    </g:VerticalPanel>
</ui:UiBinder> 